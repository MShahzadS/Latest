<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".AdminDashboard">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_height="400sp"
                android:gravity="center_horizontal"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingTop="10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Today's Income:"
                    android:layout_weight="1"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    />
                    <TextView
                        android:id="@+id/txtDailyIncome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1000"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Income:"
                        android:layout_weight="1"
                        android:textColor="@color/colorWhite"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/txtTotalIncome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1000"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Today's Expense:"
                        android:layout_weight="1"
                        android:textColor="@color/colorWhite"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/txtDailyExpense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1000"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Expense:"
                        android:layout_weight="1"
                        android:textColor="@color/colorWhite"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/txtTotalExpense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1000"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Profit:"
                        android:layout_weight="1"
                        android:textColor="@color/colorWhite"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/txtTotalProfit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1000"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30sp"
                    android:weightSum="3">
                    <Button
                        android:id="@+id/btnMappleLeaf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorAccent"
                        android:textColor="@color/colorWhite"
                        android:layout_weight="1"
                        android:text="Mapple"
                        android:layout_margin="2sp"
                        android:textAlignment="center"
                        android:paddingTop="10sp"
                        android:paddingBottom="10sp"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:elevation="20sp"
                        />
                    <Button
                        android:id="@+id/btnPioneer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorAccent"
                        android:textColor="@color/colorWhite"
                        android:layout_weight="1"
                        android:text="Pioneer"
                        android:layout_margin="2sp"
                        android:textAlignment="center"
                        android:paddingTop="10sp"
                        android:paddingBottom="10sp"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:elevation="20sp"
                        />
                    <Button
                        android:id="@+id/btnFlying"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorAccent"
                        android:textColor="@color/colorWhite"
                        android:layout_weight="1"
                        android:text="Flying"
                        android:paddingTop="10sp"
                        android:paddingBottom="10sp"
                        android:layout_margin="2sp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:elevation="20sp"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="300sp"
                android:id="@+id/layoutInput"
                android:layout_centerHorizontal="true"
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/btnIncome"
                        android:layout_width="300sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@color/colorWhite"
                        android:elevation="10sp"
                        android:padding="20sp">

                        <ImageView
                            android:layout_width="100sp"
                            android:layout_height="100sp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_income"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Income"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/btnExpense"
                        android:layout_width="300sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@color/colorWhite"
                        android:elevation="10sp"
                        android:layout_marginLeft="20sp"
                        android:padding="20sp">

                        <ImageView
                            android:layout_width="100sp"
                            android:layout_height="100sp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_expenses"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Expense"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/btnCustomer"
                        android:layout_width="300sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@color/colorWhite"
                        android:elevation="10sp"
                        android:padding="20sp">

                        <ImageView
                            android:layout_width="100sp"
                            android:layout_height="100sp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_customer"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Customer"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/btnDrivers"
                        android:layout_width="300sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@color/colorWhite"
                        android:elevation="10sp"
                        android:layout_marginLeft="20sp"
                        android:padding="20sp">

                        <ImageView
                            android:layout_width="100sp"
                            android:layout_height="100sp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_drivers"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Driver"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/btnBuses"
                        android:layout_width="300sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@color/colorWhite"
                        android:elevation="10sp"
                        android:padding="20sp">

                        <ImageView
                            android:layout_width="100sp"
                            android:layout_height="100sp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_bus"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Vehicle"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/btnUsers"
                        android:layout_width="300sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@color/colorWhite"
                        android:elevation="10sp"
                        android:layout_marginLeft="20sp"
                        android:padding="20sp">

                        <ImageView
                            android:layout_width="100sp"
                            android:layout_height="100sp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_users"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Employee"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/btnPayemnts"
                        android:layout_width="300sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@color/colorWhite"
                        android:elevation="10sp"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="20sp"
                        android:padding="20sp">

                        <ImageView
                            android:layout_width="100sp"
                            android:layout_height="100sp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_money"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Payment"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
