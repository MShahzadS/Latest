<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewEmployeeActivity">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_height="300sp"
                android:gravity="top">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20sp"
                    android:textSize="40sp"
                    android:text="Create User"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="100sp"
                android:id="@+id/layoutInput"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_centerHorizontal="true"
                android:background="@color/colorWhite"
                android:padding="20dp"
                android:orientation="vertical"
                android:elevation="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <TextView
                    android:layout_marginTop="10sp"
                    android:text="Name"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/edtEmployeeName"
                    android:drawablePadding="20sp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:hint="Employee Name"
                    android:layout_marginTop="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="10sp"
                    android:text="CNIC"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/edtEmployeeCNIC"
                    android:drawablePadding="20sp"
                    android:inputType="number"
                    android:maxLines="1"
                    android:hint="xxxxxxxxxxxxx"
                    android:layout_marginTop="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="10sp"
                    android:text="Password"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/edtEmployeePassword"
                    android:drawablePadding="20sp"
                    android:inputType="textPassword"
                    android:hint="*****"
                    android:maxLines="1"
                    android:layout_marginTop="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="20sp"
                    android:text="Contact Number"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/edtEmployeeContact"
                    android:drawablePadding="20sp"
                    android:layout_marginTop="5sp"
                    android:hint="03xxxxxxxxx"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="10sp"
                    android:text="Address"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/edtEmployeeAddress"
                    android:drawablePadding="20sp"
                    android:hint="Address"
                    android:inputType="text"
                    android:maxLines="1"
                    android:layout_marginTop="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="20sp"
                    android:text="Placement"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:id="@+id/companiesSpinner"
                    android:padding="20sp"
                    android:layout_marginTop="5sp"
                    android:entries="@array/factories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnSaveEmployee"
                    android:textColor="#FFF"
                    android:background="@color/colorAccent"
                    android:layout_marginTop="20dp"
                    android:textAllCaps="false"
                    android:onClick="saveEmployeeData"
                    android:textSize="30sp"
                    android:text="Save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layoutInput"
                android:layout_marginTop="30sp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text=""
                android:textAlignment="center"
                />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
