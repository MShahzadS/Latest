<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#07B19E"
    tools:context=".events">

    <TextView
        android:id="@+id/textevent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="#000"
        android:background="#ac234c"
        android:layout_marginTop="40sp"
        android:text="EVENTS" />

    <TextView
        android:id="@+id/texteventno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textevent"
        android:layout_marginTop="40sp"
        android:textSize="20sp"
        android:textColor="#000"
        android:background="#ac234c"
        android:textAlignment="center"
        android:layout_marginRight="50sp"
        android:layout_marginLeft="50sp"
        android:text="Event NO" />

    <TextView
        android:id="@+id/texteventtype"
        android:layout_below="@id/texteventno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp"
        android:textSize="20sp"
        android:textColor="#000"
        android:background="#ac234c"
        android:textAlignment="center"
        android:layout_marginRight="50sp"
        android:layout_marginLeft="50sp"
        android:text="Event Type" />

    <TextView
        android:id="@+id/texteventdate"
        android:layout_below="@id/texteventtype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp"
        android:textSize="20sp"
        android:textColor="#000"
        android:background="#ac234c"
        android:textAlignment="center"
        android:layout_marginRight="50sp"
        android:layout_marginLeft="50sp"
        android:text="Event Date" />

</RelativeLayout>