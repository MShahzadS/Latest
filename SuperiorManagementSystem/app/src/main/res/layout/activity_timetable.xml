<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/timelyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txttime1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/timelyt"
            android:text="2:30pm"
            android:textColor="#5E35B1"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txttime2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/txttime1"
            android:text="3:10PM"
            android:textColor="#5E35B1"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txttime3"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/txttime2"
            android:text="4:10PM"
            android:textColor="#5E35B1"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txttime4"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/txttime3"
            android:text="4:50PM"
            android:textColor="#5E35B1"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timelyt"
        android:id="@+id/montm"
        >


        <TextView
            android:id="@+id/txtmon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3F51B5"
            android:textSize="20dp"
            android:text="MON" />

        <Button
            android:id="@+id/btnsb1"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:background="#F44336"
            android:text="SNA" />

        <Button
            android:id="@+id/btnsb2"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:background="#D81B60"
            android:text="DBA" />

        <Button
            android:id="@+id/btnsb3"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:background="#FF5722"
            android:text="MC" />

        <Button
            android:id="@+id/btnsb4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/montm"
            android:layout_alignEnd="@+id/montm"
            android:background="#56FF5722"
            android:text="BREAK" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tuetm"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_below="@+id/montm"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txttue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TUE"
            android:textColor="#3F51B5"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnsb5"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_marginLeft="9dp"
            android:background="#3949AB"
            android:text="SNA" />

        <Button
            android:id="@+id/btnsb6"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:background="#00ACC1"
            android:text="DBA" />

        <Button
            android:id="@+id/btnsb7"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:background="#C0CA33"
            android:text="MC" />

        <Button
            android:id="@+id/btnsb8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#56FF5722"
            android:text="........" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tuetm"
        android:id="@+id/wedtm"
        >
        <TextView
            android:id="@+id/txtwed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3F51B5"
            android:textSize="20dp"
            android:text="WED" />

        <Button
            android:id="@+id/btnsb9"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_marginLeft="4dp"
            android:background="#F44336"
            android:text="SNA" />

        <Button
            android:id="@+id/btnsb10"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:background="#00ACC1"
            android:text="DBA" />

        <Button
            android:id="@+id/btnsb11"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:background="#C0CA33"
            android:text="MC" />

        <Button
            android:id="@+id/btnsb12"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#56FF5722"
            android:text="........" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/wedtm"
        android:id="@+id/thutm"
        >
        <TextView
            android:id="@+id/txtthu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3F51B5"
            android:layout_marginLeft="2dp"
            android:textSize="20dp"
            android:text="THU" />

        <Button
            android:id="@+id/btnsb13"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_marginLeft="4dp"
            android:background="#F44336"
            android:text="SNA" />

        <Button
            android:id="@+id/btnsb14"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:background="#00ACC1"
            android:text="DBA" />

        <Button
            android:id="@+id/btnsb15"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:background="#C0CA33"
            android:text="MC" />

        <Button
            android:id="@+id/btnsb16"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#56FF5722"
            android:text="BREAK" />


    </LinearLayout>
    <Button
        android:id="@+id/btndisplay"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/thutm"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"
        android:text="DISPLAY"
        />

</RelativeLayout>