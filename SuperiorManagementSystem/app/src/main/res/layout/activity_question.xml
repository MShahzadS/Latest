<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".question">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
        android:id="@+id/txtquestion"
        android:layout_width="410dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textColor="#00897b"
        android:text="ASK QUESTION" />

    <EditText
        android:id="@+id/edtqueclass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textColorHint="#00897b"
        android:layout_marginLeft="55sp"
        android:layout_marginRight="55dp"
        android:layout_below="@id/txtquestion"
        android:hint="Class Name" />

    <EditText
        android:id="@+id/edtquesection"
        android:layout_below="@id/edtqueclass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColorHint="#00897b"
        android:textSize="15dp"
        android:layout_marginLeft="55sp"
        android:layout_marginRight="55dp"
        android:hint="Section Name" />

    <EditText
        android:id="@+id/edtqueteacher"
        android:layout_below="@id/edtquesection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textColorHint="#00897b"
        android:layout_marginLeft="55sp"
        android:layout_marginRight="55dp"
        android:hint="Teacher Name" />

    <EditText
        android:id="@+id/wrtquestions"
        android:layout_below="@id/edtqueteacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_marginLeft="55sp"
        android:layout_marginRight="55dp"
        android:textColorHint="#00897b"
        android:hint="Ask Question" />

    <Button
        android:id="@+id/btnquestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wrtquestions"
        android:layout_marginLeft="100sp"
        android:layout_marginRight="100sp"
        android:textColor="#000"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        android:textSize="20dp"
        android:text="Submit"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>