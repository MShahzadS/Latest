<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddClass"
    android:layout_gravity="center"
    android:padding="20sp"
    android:gravity="center">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgsplogo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/superior"
                />

            <EditText
                android:id="@+id/edtClass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColorHint="#00897b"
                android:layout_marginTop="50sp"
                android:layout_below="@id/imgsplogo"
                android:hint="CLASS ID"
                />
            <EditText
                android:id="@+id/edtName"
                android:layout_below="@id/edtClass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColorHint="#00897b"
                android:hint="NAME" />

            <EditText
                android:id="@+id/edtsection"
                android:layout_below="@id/edtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColorHint="#00897b"
                android:hint="SECTION" />

            <Button
                android:id="@+id/btnclassadd"
                android:layout_below="@id/edtsection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Class" />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>